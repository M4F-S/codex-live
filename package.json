{
  "name": "codex-live",
  "version": "1.0.0",
  "description": "Real-time collaborative editor with CRDT-based conflict resolution",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=lcov --coverageReporters=text",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "security:check": "npx semgrep --config=auto --error --json --output=semgrep-report.json src/",
    "validate": "npm run lint && npm run typecheck && npm run test:coverage"
  },
  "keywords": [
    "crdt",
    "collaborative",
    "editor",
    "real-time",
    "websocket"
  ],
  "author": "LYNX V4.0",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "rate-limiter-flexible": "^2.4.2",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "ws": "^8.13.0",
    "y-webrtc": "^10.3.0",
    "y-websocket": "^1.5.0",
    "yjs": "^13.6.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.36.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^30.0.5",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
