{
  "name": "codex-live",
  "version": "1.0.0",
  "description": "Real-time collaborative editor with CRDT-based conflict resolution",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:client": "tsc && vite build",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=lcov --coverageReporters=text",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "security:audit": "npm audit && npm audit --audit-level=moderate",
    "validate": "npm run lint && npm run typecheck && npm run test:coverage"
  },
  "keywords": [
    "crdt",
    "collaborative",
    "editor",
    "real-time",
    "websocket"
  ],
  "author": "LYNX V4.0",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "rate-limiter-flexible": "^5.0.3",
    "uuid": "^10.0.0",
    "winston": "^3.13.1",
    "ws": "^8.18.0",
    "y-webrtc": "^10.3.0",
    "y-websocket": "^1.5.4",
    "yjs": "^13.6.15"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
